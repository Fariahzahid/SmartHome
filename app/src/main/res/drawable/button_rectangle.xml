<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape>
        <gradient
            android:startColor="@color/purple_dark"
            android:endColor="@color/purplelight3"
            android:angle="270">
        </gradient>
        <stroke
            android:width="1dp"
            android:color="@color/greenshade2">
        </stroke>
        <corners
            android:radius="20dp">
        </corners>
        <padding
            android:right="10dp"
            android:bottom="10dp"
            android:left="10dp"
            android:top="10dp"></padding>
    </shape>
</item>
    <item android:state_selected="true">
        <shape>
            <solid
                android:color="@color/purple_dark2"></solid>
            <stroke
                android:width="1dp"
                android:color="@color/purple_dark2">
            </stroke>
            <corners
                android:radius="20dp">
            </corners>
            <padding
                android:right="10dp"
                android:bottom="10dp"
                android:left="10dp"
                android:top="10dp"></padding>
        </shape>

    </item>
<item android:state_pressed="true">
    <shape>
        <solid
            android:color="@color/purple_dark2"></solid>
        <stroke
            android:width="1dp"
            android:color="@color/purple_dark2">
        </stroke>
        <corners
            android:radius="20dp">
        </corners>
        <padding
            android:right="10dp"
            android:bottom="10dp"
            android:left="10dp"
            android:top="10dp"></padding>
    </shape>

</item>
</selector>