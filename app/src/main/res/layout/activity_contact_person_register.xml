<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context="com.example.smart_home.Contact_Person_SignIn.Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/contact_person_profileimage"
                android:layout_width="86dp"
                android:layout_height="72dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/user_icon2"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/contact_person_register_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="36dp"
                android:inputType="textPersonName"
                android:hint="Full name"
                android:padding="15dp"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="16dp" />

            <EditText
                android:id="@+id/contact_person_register_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="0dp" />

            <EditText
                android:id="@+id/contact_person_register_phoneno"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="numberSigned"
                android:layout_marginTop="28dp"
                android:hint="Phone Number"
                android:padding="15dp"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="0dp" />

            <EditText
                android:id="@+id/contact_person_register_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="28dp"
                android:hint="Address"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="0dp" />

            <EditText
                android:id="@+id/contact_person_register_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="0dp" />

            <EditText
                android:id="@+id/contact_person_register_conpassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Confirm Passowrd"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="0dp" />

            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="398dp"
                android:layout_height="62dp"
                android:layout_marginTop="16dp"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textSize="15sp" />


            <Button
                android:id="@+id/contact_person_register_button"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginTop="24dp"
                android:padding="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/button_rectangle"
                android:fontFamily="sans-serif-black"
                android:text="REGISTER"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>




