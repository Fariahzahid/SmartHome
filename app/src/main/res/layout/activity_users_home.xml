<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Users_Modes.User_Home_Colored"
    android:id="@+id/speechlayout"
    >

        <LinearLayout
            android:id="@+id/activity_dashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/grey_bakground"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/user_main_mode_image"
                    android:layout_width="96dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/mode_user" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_main_mode_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:fontFamily="sans-serif-black"
                        android:text="MODES "
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/user_main_mode_emergency_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="sans-serif-black"
                        android:text="SELECTION"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                </LinearLayout>
                <Button
                    android:id="@+id/user_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_rectangle_grey"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="LOG OUT"></Button>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@android:color/transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp">

                            <ImageView
                                android:layout_width="88dp"
                                android:layout_height="106dp"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:padding="5dp"
                                app:srcCompat="@drawable/one">

                            </ImageView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="8dp">

                        <LinearLayout
                            android:id="@+id/layout_user_home_sleep_mode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp">

                                <ImageView
                                    android:layout_width="81dp"
                                    android:layout_height="83dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/usersleepicon" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="105dp"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:padding="10dp"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <Button
                                    android:id="@+id/user_home_sleep_mode_button"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_rectangle_grey"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center|center_horizontal|center_vertical"
                                    android:text="SLEEP"
                                    android:textColor="@color/black"
                                    android:textSize="26sp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@android:color/transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp">

                            <ImageView
                                android:layout_width="88dp"
                                android:layout_height="106dp"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:padding="10dp"
                                app:srcCompat="@drawable/two">

                            </ImageView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:clickable="true"
                        android:paddingLeft="5dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.25">


                        <LinearLayout
                            android:id="@+id/layout_user_home_moveoutmode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp">

                                <ImageView
                                    android:id="@+id/cotact_person_moveoutmode_image"
                                    android:layout_width="88dp"
                                    android:layout_height="86dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    app:srcCompat="@drawable/moveout_mode_user" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="105dp"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:padding="10dp"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <Button
                                    android:id="@+id/user_home_moveoutmode_button"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_rectangle_grey"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center|center_horizontal|center_vertical"
                                    android:text="MOVE OUT"
                                    android:textColor="@color/black"
                                    android:textSize="24sp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                   >

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@android:color/transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp">

                            <ImageView
                                android:layout_width="88dp"
                                android:layout_height="106dp"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:padding="10dp"
                                app:srcCompat="@drawable/three">

                            </ImageView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:clickable="true"
                        android:paddingLeft="5dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="8dp">

                        <LinearLayout
                            android:id="@+id/layout_user_home_automatic_mode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp">

                                <ImageView
                                    android:layout_width="88dp"
                                    android:layout_height="86dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/automatic_mode_user" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="105dp"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:padding="10dp"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <Button
                                    android:id="@+id/user_home_automatic_mode_button"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_rectangle_grey"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center|center_horizontal|center_vertical"
                                    android:text="AUTO MATIC"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@android:color/transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp">

                            <ImageView
                                android:layout_width="88dp"
                                android:layout_height="106dp"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:padding="10dp"
                                app:srcCompat="@drawable/four">

                            </ImageView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:clickable="true"
                        android:paddingLeft="5dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="8dp">

                        <LinearLayout
                            android:id="@+id/layout_user_home_manual_mode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp">

                                <ImageView
                                    android:layout_width="88dp"
                                    android:layout_height="86dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/manualicon" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="105dp"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:padding="10dp"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <Button
                                    android:id="@+id/user_home_manual_mode_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_rectangle_grey"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center|center_horizontal|center_vertical"
                                    android:text="MANUAL"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_main_mode_emergency_text">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@android:color/transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp">

                            <ImageView
                                android:layout_width="88dp"
                                android:layout_height="106dp"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:padding="10dp"
                                app:srcCompat="@drawable/five">

                            </ImageView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:clickable="true"
                        android:paddingLeft="5dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.25">

                        <LinearLayout
                            android:id="@+id/layout_user_home_contact_person"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp">


                                <ImageView
                                    android:layout_width="88dp"
                                    android:layout_height="86dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/condinator" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="105dp"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:padding="10dp"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <Button
                                    android:id="@+id/user_home_contact_person_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_rectangle_grey"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center|center_horizontal|center_vertical"
                                    android:text="CONTACT"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</ScrollView>