<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smart_home.Contact_Person_Modes.Contact_Person_Sleep_Mode_Livingroom"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle4"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/linearLayout8"
                    android:layout_width="369dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.068"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_main_mode_image">

                    <androidx.cardview.widget.CardView
                        android:layout_width="178dp"
                        android:layout_height="60dp"
                        android:layout_gravity="right|center"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <TextView

                            android:id="@+id/contact_person_user_window_blinds_text"
                            android:layout_width="173dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal|center_vertical"
                            android:layout_marginLeft="0dp"
                            android:fontFamily="sans-serif-black"
                            android:paddingLeft="20dp"
                            android:paddingTop="0dp"
                            android:text="Window Blinds"
                            android:textColor="@android:color/white"
                            android:textSize="20dp">

                        </TextView>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:background="@drawable/rectangle"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <Spinner
                            android:id="@+id/window_blind_sleepmode_livingroom_spinner"
                            android:layout_width="191dp"
                            android:layout_height="43dp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout9"
                    android:layout_width="369dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.068"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_main_mode_image">

                    <androidx.cardview.widget.CardView
                        android:layout_width="178dp"
                        android:layout_height="60dp"
                        android:layout_gravity="right|center"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <TextView

                            android:id="@+id/contact_person_user_bulb_text"
                            android:layout_width="173dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal|center_vertical"
                            android:layout_marginLeft="0dp"
                            android:fontFamily="sans-serif-black"
                            android:paddingLeft="20dp"
                            android:paddingTop="0dp"
                            android:text="Bulb"
                            android:textColor="@android:color/white"
                            android:textSize="20dp">

                        </TextView>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:background="@drawable/rectangle"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <Spinner
                            android:id="@+id/bulb_sleepmode_livingroom_spinner"
                            android:layout_width="191dp"
                            android:layout_height="43dp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout10"
                    android:layout_width="369dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.068"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_main_mode_image">

                    <androidx.cardview.widget.CardView
                        android:layout_width="178dp"
                        android:layout_height="60dp"
                        android:layout_gravity="right|center"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <TextView

                            android:id="@+id/contact_person_user_bulb_intensity_text"
                            android:layout_width="173dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal|center_vertical"
                            android:layout_marginLeft="0dp"
                            android:fontFamily="sans-serif-black"
                            android:paddingLeft="20dp"
                            android:paddingTop="0dp"
                            android:text="Bulb Intensity"
                            android:textColor="@android:color/white"
                            android:textSize="20dp">

                        </TextView>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:background="@drawable/rectangle"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <Spinner
                            android:id="@+id/bulb_intensity_sleepmode_livingroom_spinner"
                            android:layout_width="191dp"
                            android:layout_height="43dp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout11"
                    android:layout_width="369dp"
                    android:layout_height="67dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.068"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_main_mode_image">

                    <androidx.cardview.widget.CardView
                        android:layout_width="178dp"
                        android:layout_height="60dp"
                        android:layout_gravity="right|center"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <TextView

                            android:id="@+id/contact_person_user_tablelamp_text"
                            android:layout_width="173dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal|center_vertical"
                            android:layout_marginLeft="0dp"
                            android:fontFamily="sans-serif-black"
                            android:paddingLeft="20dp"
                            android:paddingTop="0dp"
                            android:text="Table Lamp"
                            android:textColor="@android:color/white"
                            android:textSize="20dp">

                        </TextView>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:background="@drawable/rectangle"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <Spinner
                            android:id="@+id/tablelamp_sleepmode_livingroom_spinner"
                            android:layout_width="191dp"
                            android:layout_height="43dp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout12"
                    android:layout_width="369dp"
                    android:layout_height="67dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.068"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_main_mode_image">

                    <androidx.cardview.widget.CardView
                        android:layout_width="178dp"
                        android:layout_height="60dp"
                        android:layout_gravity="right|center"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <TextView

                            android:id="@+id/contact_person_user_tv_text"
                            android:layout_width="173dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal|center_vertical"
                            android:layout_marginLeft="0dp"
                            android:fontFamily="sans-serif-black"
                            android:paddingLeft="20dp"
                            android:paddingTop="0dp"
                            android:text="Television"
                            android:textColor="@android:color/white"
                            android:textSize="20dp">

                        </TextView>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:background="@drawable/rectangle"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <Spinner
                            android:id="@+id/tv_sleepmode_livingroom_spinner"
                            android:layout_width="191dp"
                            android:layout_height="43dp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <Button
                    android:id="@+id/livingroom_sleepmode_save"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:background="@drawable/button_rectangle"
                    android:text="SAVE"
                    android:textColor="@color/white"
                    android:textSize="25dp"></Button>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>





</FrameLayout>