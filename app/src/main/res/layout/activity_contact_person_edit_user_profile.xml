<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background3"
    tools:context="com.example.smart_home.Contact_Person_Screen.Contact_Person_Add_New_Users">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@drawable/background3"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/user_profile_image"
                    android:layout_width="86dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/user_icon2"
                    app:layout_constraintVertical_bias="0.026" />

                <EditText
                    android:id="@+id/user_edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="36dp"
                    android:hint="Full name"
                    android:inputType="textPersonName"
                    android:padding="15dp"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="16dp" />

                <EditText
                    android:id="@+id/user_edit_phoneno"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="28dp"
                    android:hint="Phone Number"
                    android:numeric="integer"
                    android:padding="15dp"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="0dp" />
                <TextView
                    android:id="@+id/user_edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="28dp"
                    android:hint="Email"
                    android:padding="15dp"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="0dp" />


                <EditText
                    android:id="@+id/user_edit_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="28dp"
                    android:hint="Address"
                    android:padding="15dp"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@+id/user_register_phoneno"
                    tools:layout_editor_absoluteX="0dp" />


                <TextView
                    android:id="@+id/user_edit_gender"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="28dp"
                    android:hint="Gender"
                    android:padding="15dp"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@+id/user_register_phoneno"
                    tools:layout_editor_absoluteX="0dp" />

                <Spinner
                    android:id="@+id/edit_gender_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="16dp"
                    android:padding="15dp"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:fontFamily="sans-serif-black"
                        android:padding="15dp"
                        android:text="Disabilities"
                        android:textColor="@android:color/black"
                        android:textSize="18sp">
                    </TextView>

                    <TextView
                        android:id="@+id/text_disabilityone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif"
                        android:text="None"
                        android:textColor="@android:color/black"
                        android:textSize="15sp">
                    </TextView>
                    <TextView
                        android:id="@+id/text_disabilitytwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif"
                        android:text="Female"
                        android:visibility="gone"
                        android:textColor="@android:color/black"
                        android:textSize="15sp">
                    </TextView>
                    <TextView

                        android:id="@+id/text_disabilitythree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif"
                        android:visibility="gone"
                        android:text="Female"
                        android:textColor="@android:color/black"
                        android:textSize="15sp">
                    </TextView>
                    <TextView
                        android:id="@+id/text_disabilityfour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif"
                        android:text="Female"
                        android:textColor="@android:color/black"
                        android:textSize="15sp">
                    </TextView>
                    <TextView
                        android:id="@+id/text_disabilityfive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif"
                        android:text="Female"
                        android:visibility="gone"
                        android:textColor="@android:color/black"
                        android:textSize="15sp">
                    </TextView>
                    <TextView
                        android:id="@+id/text_disabilitysix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif"
                        android:text="Female"
                        android:visibility="gone"
                        android:textColor="@android:color/black"
                        android:textSize="15sp">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/adddisability"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/disability_spinner_two"
                        android:layout_width="276dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:padding="15dp"
                        android:text="Edit Disability"
                        android:textSize="15sp" />
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/button_add_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:src="@drawable/plus2"
                        app:backgroundTint="@color/purple_dark2"
                        ></com.google.android.material.floatingactionbutton.FloatingActionButton>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/Disability">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch1"
                            android:layout_width="314dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Muteness Disability"
                            android:textOff="No"
                            android:textOn="Yes"
                            android:thumb="@drawable/swtich_button"
                            />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch2"
                            android:layout_width="314dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Hearing Impairment"
                            android:textOff="No"
                            android:textOn="Yes"
                            android:thumb="@drawable/swtich_button"
                            />
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch3"
                            android:layout_width="314dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Physical Impairment"
                            android:textOff="No"
                            android:textOn="Yes"
                            android:thumb="@drawable/swtich_button"
                            />
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch4"
                            android:layout_width="314dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Color Blindness"
                            android:textOff="No"
                            android:textOn="Yes"
                            android:thumb="@drawable/swtich_button"
                            />
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch5"
                            android:layout_width="314dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Vision Impairment"
                            android:textOff="No"
                            android:textOn="Yes"
                            android:thumb="@drawable/swtich_button"
                            />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch6"
                            android:layout_width="314dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Dylexia Disorder"
                            android:textOff="No"
                            android:textOn="Yes"
                            android:thumb="@drawable/swtich_button"
                            />
                </LinearLayout>


                <Button
                    android:id="@+id/save_update_user"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/button_rectangle"
                    android:fontFamily="sans-serif-black"
                    android:text="SAVE"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/contact_person_register_conpassword"
                    app:layout_constraintVertical_bias="0.0" />


            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavView_Bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_dark"
                app:itemIconTint="@color/white"
                app:itemTextColor="@color/white"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/bottom_navigation_menu">


            </com.google.android.material.bottomnavigation.BottomNavigationView>
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>