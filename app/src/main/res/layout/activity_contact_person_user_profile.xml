<?xml version="1.0" encoding="utf-8"?>



<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context="com.example.smart_home.Contact_Person_Screen.Contact_Person_User_Profile"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="676dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_dashboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background3"

                android:paddingLeft="0dp"
                android:paddingTop="16dp"
                android:paddingRight="0dp"
                android:paddingBottom="40dp"
                >

                <Spinner
                    android:id="@+id/cp_User_Profile"
                    android:layout_width="136dp"
                    android:layout_height="40dp"
                    android:fontFamily="sans-serif-black"
                    android:text="USER PROFILE"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.022" />

                <ImageView
                    android:id="@+id/cp_user_profile_image"
                    android:layout_width="128dp"
                    android:layout_height="112dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/contact_person_user_list"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cp_User_Profile"
                    app:srcCompat="@color/black" />

                <LinearLayout
                    android:id="@+id/layout_cp_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rectangle"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cp_user_profile_image">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="210dp"
                            android:layout_height="60dp"
                            android:layout_gravity="left"
                            android:orientation="vertical">

                            <TextView

                                android:id="@+id/text_cp_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="0dp"
                                android:fontFamily="sans-serif-black"
                                android:paddingTop="10dp"
                                android:text="User Name"
                                android:textColor="@android:color/black"
                                android:textSize="18sp">

                            </TextView>

                            <TextView

                                android:id="@+id/text_cp_user_name_2"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="sans-serif"
                                android:textColor="@android:color/black"
                                android:textSize="15sp">

                            </TextView>
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right|center_vertical"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp">

                            <Button
                                android:id="@+id/cp_edit_button_1"
                                android:layout_width="90dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/button_rectangle"
                                android:fontFamily="sans-serif-black"
                                android:gravity="center|center_horizontal|center_vertical"
                                android:paddingTop="10dp"
                                android:text="EDIT"
                                android:textColor="@color/white"
                                android:textSize="18sp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="210dp"
                            android:layout_height="60dp"
                            android:layout_gravity="left"
                            android:orientation="vertical">

                            <TextView

                                android:id="@+id/text_cp_user_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="0dp"
                                android:fontFamily="sans-serif-black"
                                android:paddingTop="10dp"
                                android:text="User Email"
                                android:textColor="@android:color/black"
                                android:textSize="18sp">

                            </TextView>

                            <TextView

                                android:id="@+id/text_cp_user_email_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|center_horizontal"
                                android:fontFamily="sans-serif"
                                android:textColor="@android:color/black"
                                android:textSize="15sp">

                            </TextView>
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right|center_vertical"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp">

                            <Button
                                android:id="@+id/cp_edit_button_2"
                                android:layout_width="90dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/button_rectangle"
                                android:fontFamily="sans-serif-black"
                                android:gravity="center|center_horizontal|center_vertical"
                                android:paddingTop="10dp"
                                android:text="EDIT"
                                android:textColor="@color/white"
                                android:textSize="18sp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="210dp"
                            android:layout_height="60dp"
                            android:layout_gravity="left"
                            android:orientation="vertical">

                            <TextView

                                android:id="@+id/text_cp_user_phoneno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="0dp"
                                android:fontFamily="sans-serif-black"
                                android:paddingTop="10dp"
                                android:text="Phone Number"
                                android:textColor="@android:color/black"
                                android:textSize="18sp">

                            </TextView>

                            <TextView

                                android:id="@+id/text_cp_user_phoneno_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="sans-serif"
                                android:textColor="@android:color/black"
                                android:textSize="15sp">

                            </TextView>
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right|center_vertical"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp">

                            <Button
                                android:id="@+id/cp_edit_button_3"
                                android:layout_width="90dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/button_rectangle"
                                android:fontFamily="sans-serif-black"
                                android:gravity="center|center_horizontal|center_vertical"
                                android:paddingTop="10dp"
                                android:text="EDIT"
                                android:textColor="@color/white"
                                android:textSize="18sp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="210dp"
                            android:layout_height="80dp"
                            android:layout_gravity="left"
                            android:orientation="vertical">

                            <TextView

                                android:id="@+id/text_cp_user_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="0dp"
                                android:fontFamily="sans-serif-black"
                                android:paddingTop="10dp"
                                android:text="Address"
                                android:textColor="@android:color/black"
                                android:textSize="18sp">

                            </TextView>

                            <TextView

                                android:id="@+id/text_cp_user_address_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="sans-serif"
                                android:textColor="@android:color/black"
                                android:textSize="15sp">

                            </TextView>
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right|center_vertical"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp">

                            <Button
                                android:id="@+id/cp_edit_button_4"
                                android:layout_width="90dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/button_rectangle"
                                android:fontFamily="sans-serif-black"
                                android:gravity="center|center_horizontal|center_vertical"
                                android:paddingTop="10dp"
                                android:text="EDIT"
                                android:textColor="@color/white"
                                android:textSize="18sp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="210dp"
                            android:layout_height="80dp"
                            android:layout_gravity="left"
                            android:orientation="vertical">

                            <TextView

                                android:id="@+id/text_cp_useraddress3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="0dp"
                                android:fontFamily="sans-serif-black"
                                android:paddingTop="10dp"
                                android:text="Gender"
                                android:textColor="@android:color/black"
                                android:textSize="18sp">

                            </TextView>

                            <TextView

                                android:id="@+id/text_cp_useraddress4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="sans-serif"
                                android:text="Female"
                                android:textColor="@android:color/black"
                                android:textSize="15sp">

                            </TextView>
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right|center_vertical"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp">

                            <Button
                                android:id="@+id/cp_edit_button_5"
                                android:layout_width="90dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/button_rectangle"
                                android:fontFamily="sans-serif-black"
                                android:gravity="center|center_horizontal|center_vertical"
                                android:paddingTop="10dp"
                                android:text="EDIT"
                                android:textColor="@color/white"
                                android:textSize="18sp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavView_Bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:labelVisibilityMode="labeled"
                android:background="@color/purple_dark"
                app:itemIconTint="@color/white"
                app:itemTextColor="@color/white"
                app:menu="@menu/bottom_navigation_menu"
                >


            </com.google.android.material.bottomnavigation.BottomNavigationView>
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
