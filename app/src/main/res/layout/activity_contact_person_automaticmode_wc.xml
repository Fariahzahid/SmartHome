<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smart_home.Contact_Person_Modes.Contact_Person_Automatic_Mode_WC"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:orientation="horizontal"
                        android:background="@drawable/rectangle"
                        android:paddingLeft="16dp"
                        android:paddingTop="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="16dp">

                        <ImageView
                            android:id="@+id/user_main_mode_image"
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.021"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/toilet" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TOILET"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="20dp"
                                android:textSize="30dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"></TextView>
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:background="@drawable/rectangle4"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.068"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/user_main_mode_image">

                            <androidx.cardview.widget.CardView
                                android:layout_width="150dp"
                                android:layout_height="60dp"
                                android:layout_gravity="right|center"
                                android:orientation="vertical"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|center_horizontal|center_vertical"
                                    android:layout_marginLeft="0dp"
                                    android:fontFamily="sans-serif-black"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="0dp"
                                    android:text="Bulb On"
                                    android:textColor="@android:color/white"
                                    android:textSize="16dp">

                                </TextView>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:background="@drawable/rectangle"
                                android:orientation="vertical"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <Spinner
                                    android:id="@+id/bulb_on_automaticmode_wc_spinner"
                                    android:layout_width="wrap_content"
                                    android:autofillHints="Hour"
                                    android:layout_height="43dp" />
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:background="@drawable/rectangle"
                                android:orientation="vertical"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <Spinner
                                    android:id="@+id/bulb_onmin_automaticmode_wc_spinner"
                                    android:layout_width="wrap_content"
                                    android:autofillHints="Min"
                                    android:layout_height="43dp" />
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.068"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/user_main_mode_image">

                            <androidx.cardview.widget.CardView
                                android:layout_width="150dp"
                                android:layout_height="60dp"
                                android:layout_gravity="right|center"
                                android:orientation="vertical"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|center_horizontal|center_vertical"
                                    android:layout_marginLeft="0dp"
                                    android:fontFamily="sans-serif-black"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="0dp"
                                    android:text="Bulb Off"
                                    android:textColor="@android:color/white"
                                    android:textSize="16dp">

                                </TextView>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:background="@drawable/rectangle"
                                android:orientation="vertical"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <Spinner
                                    android:id="@+id/bulb_off_automaticmode_wc_spinner"
                                    android:layout_width="wrap_content"
                                    android:autofillHints="Hour"
                                    android:layout_height="43dp" />
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:background="@drawable/rectangle"
                                android:orientation="vertical"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <Spinner
                                    android:id="@+id/bulb_offmin_automaticmode_wc_spinner"
                                    android:layout_width="wrap_content"
                                    android:autofillHints="Min"
                                    android:layout_height="43dp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="67dp"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.068"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/user_main_mode_image">

                            <androidx.cardview.widget.CardView
                                android:layout_width="150dp"
                                android:layout_height="60dp"
                                android:layout_gravity="right|center"
                                android:orientation="vertical"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|center_horizontal|center_vertical"
                                    android:layout_marginLeft="0dp"
                                    android:fontFamily="sans-serif-black"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="0dp"
                                    android:text="Extractor Fan On"
                                    android:textColor="@android:color/white"
                                    android:textSize="16dp">

                                </TextView>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:background="@drawable/rectangle"
                                android:orientation="vertical"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <Spinner
                                    android:id="@+id/extfan_on_automaticmode_wc_spinner"
                                    android:layout_width="match_parent"
                                    android:autofillHints="Hour"
                                    android:layout_height="43dp" />
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:background="@drawable/rectangle"
                                android:orientation="vertical"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <Spinner
                                    android:id="@+id/extfan_onmin_automaticmode_wc_spinner"
                                    android:layout_width="match_parent"
                                    android:autofillHints="Min"
                                    android:layout_height="43dp" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="67dp"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.068"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/user_main_mode_image">

                            <androidx.cardview.widget.CardView
                                android:layout_width="150dp"
                                android:layout_height="60dp"
                                android:layout_gravity="right|center"
                                android:orientation="vertical"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|center_horizontal|center_vertical"
                                    android:layout_marginLeft="0dp"
                                    android:fontFamily="sans-serif-black"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="0dp"
                                    android:text="Extractor Fan Off"
                                    android:textColor="@android:color/white"
                                    android:textSize="16dp">

                                </TextView>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:background="@drawable/rectangle"
                                android:orientation="vertical"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <Spinner
                                    android:id="@+id/extfan_off_automaticmode_wc_spinner"
                                    android:layout_width="wrap_content"
                                    android:autofillHints="Hour"
                                    android:layout_height="43dp" />
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:background="@drawable/rectangle"
                                android:orientation="vertical"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <Spinner
                                    android:id="@+id/extfan_offmin_automaticmode_wc_spinner"
                                    android:layout_width="wrap_content"
                                    android:autofillHints="Min"
                                    android:layout_height="43dp" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <Button
                            android:id="@+id/wc_automaticmode_save"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|center_horizontal|center_vertical"
                            android:background="@drawable/button_rectangle"
                            android:layout_margin="10dp"
                            android:text="SAVE"
                            android:textColor="@color/white"
                            android:textSize="25dp"></Button>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </ScrollView>
</FrameLayout>