<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_dashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/grey_bakground"

            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            tools:context="com.example.smart_home.Contact_Person_Screen.Contact_Person_Home">

            <ImageView
                android:id="@+id/contact_person_sleep_mode_image"
                android:layout_width="126dp"
                android:layout_height="102dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.003"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/mode_user" />

            <TextView
                android:id="@+id/contact_person_modesetting_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="MODES"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.165"
                app:layout_constraintStart_toEndOf="@+id/contact_person_sleep_mode_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.054" />


            <LinearLayout
                android:layout_width="368dp"
                android:layout_height="539dp"
                android:layout_marginTop="36dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contact_person_modesetting_text2"
                app:layout_constraintVertical_bias="0.026">

                <LinearLayout
                    android:layout_width="356dp"
                    android:layout_height="119dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/contact_person_modesetting_text2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@android:color/transparent">

                        <LinearLayout
                            android:id="@+id/layout_numberone"
                            android:layout_width="98dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp">

                            <ImageView
                                android:layout_width="88dp"
                                android:layout_height="106dp"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                app:srcCompat="@drawable/one">

                            </ImageView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/contact_person_sleep_mode"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:clickable="true"
                        android:paddingLeft="5dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.25">

                        <LinearLayout
                            android:id="@+id/layout_sleep_mode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_gravity="left"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp">

                                <ImageView
                                    android:id="@+id/cotact_person_sleep_mode_image"
                                    android:layout_width="88dp"
                                    android:layout_height="86dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/usersleepicon" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="131dp"
                                android:layout_height="105dp"
                                android:layout_gravity="right"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <Button
                                    android:id="@+id/contact_person_sleep_mode_button"
                                    android:layout_width="140dp"
                                    android:layout_height="73dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_rectangle_grey"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center|center_horizontal|center_vertical"
                                    android:text="SLEEP"
                                    android:textColor="@color/black"
                                    android:textSize="30sp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="356dp"
                    android:layout_height="119dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/contact_person_modesetting_text2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@android:color/transparent">

                        <LinearLayout
                            android:id="@+id/layout_numbertwo"
                            android:layout_width="98dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp">

                            <ImageView
                                android:layout_width="88dp"
                                android:layout_height="106dp"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                app:srcCompat="@drawable/two">

                            </ImageView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/contact_person_moveout_mode"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:clickable="true"
                        android:paddingLeft="5dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.25">

                        <LinearLayout
                            android:id="@+id/layout_moveoutmode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_gravity="left"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp">

                                <ImageView
                                    android:id="@+id/cotact_person_moveoutmode_image"
                                    android:layout_width="88dp"
                                    android:layout_height="86dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/moveout_mode_user" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="131dp"
                                android:layout_height="105dp"
                                android:layout_gravity="right"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <Button
                                    android:id="@+id/contact_person_moveoutmode_button"
                                    android:layout_width="140dp"
                                    android:layout_height="73dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_rectangle_grey"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center|center_horizontal|center_vertical"
                                    android:text="MOVE OUT"
                                    android:textColor="@color/black"
                                    android:textSize="24sp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="356dp"
                    android:layout_height="119dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/contact_person_modesetting_text2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@android:color/transparent">

                        <LinearLayout
                            android:id="@+id/layout_numberthree"
                            android:layout_width="98dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp">

                            <ImageView
                                android:layout_width="88dp"
                                android:layout_height="106dp"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                app:srcCompat="@drawable/three">

                            </ImageView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/contact_person_automatic_mode"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:clickable="true"
                        android:paddingLeft="5dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.25">

                        <LinearLayout
                            android:id="@+id/layout_automatic_mode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_gravity="left"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp">

                                <ImageView
                                    android:id="@+id/cotact_person_automatic_mode_image"
                                    android:layout_width="88dp"
                                    android:layout_height="86dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/automatic_mode_user" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="131dp"
                                android:layout_height="105dp"
                                android:layout_gravity="right"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <Button
                                    android:id="@+id/contact_person_automatic_mode_button"
                                    android:layout_width="140dp"
                                    android:layout_height="73dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_rectangle_grey"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center|center_horizontal|center_vertical"
                                    android:text="AUTOMATIC"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="356dp"
                    android:layout_height="119dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/contact_person_modesetting_text2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@android:color/transparent">

                        <LinearLayout
                            android:id="@+id/layout_numberfour"
                            android:layout_width="98dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp">

                            <ImageView
                                android:layout_width="88dp"
                                android:layout_height="106dp"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                app:srcCompat="@drawable/four">

                            </ImageView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/contact_person_manual_mode"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:clickable="true"
                        android:paddingLeft="5dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.25">

                        <LinearLayout
                            android:id="@+id/layout_manual_mode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_gravity="left"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp"
                                app:cardMaxElevation="0dp">

                                <ImageView
                                    android:id="@+id/cotact_person_manual_mode_image"
                                    android:layout_width="88dp"
                                    android:layout_height="86dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/manualicon" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="131dp"
                                android:layout_height="105dp"
                                android:layout_gravity="right"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <Button
                                    android:id="@+id/contact_person_manual_mode_button"
                                    android:layout_width="140dp"
                                    android:layout_height="73dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_rectangle_grey"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center|center_horizontal|center_vertical"
                                    android:text="MANUAL"
                                    android:textColor="@color/black"
                                    android:textSize="24sp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <RelativeLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:labelVisibilityMode="labeled"
                android:background="@color/purple_dark"
                app:itemIconTint="@color/white"
                app:itemTextColor="@color/white"
                app:menu="@menu/bottom_navigation_menu"
                >


            </com.google.android.material.bottomnavigation.BottomNavigationView>
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>