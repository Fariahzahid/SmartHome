                            android:layout_gravity="center|center_horizontal|center_vertical"
                            app:srcCompat="@drawable/threewooden">

                        </ImageView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
